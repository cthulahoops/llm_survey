<!DOCTYPE html>
<html>
    <head>
        <title>{{ model_info.name }}</title>
        {% include "head.html.j2" %}
    </head>
    <body>
        {% include "nav.html.j2" %}
        <main>
            <h1>{{ model_info.name }}</h1>

            {% if model_info %}
            <h2>Description</h2>

            <div class="markdown-body">
                {{ model_info.description | to_markdown | safe }}
            </div>

            <h2>Company</h2>
            {{ model_info.company }}


            <ul class=model-list>
            {% for model in companies[model_info.company] %}
                <li>
                    <a href="{{model | model_file}}">
                        {{ model | model_name }}
                    </a>
                </li>
            {% endfor %}
            </ul>
            {% endif %}


            <h2>Most Similar</h2>

            <ul class=model-list>

            {% for model in outputs.by_similarity(current_model)[:5] %}
                <li>
                    <a href="{{model | model_file}}">
                        {{ model | model_name }}
                    </a>
                </li>
            {% endfor %}
            </ul>

            <h2>Least Similar</h2>

            <ul class=model-list>

            {% for model in outputs.by_similarity(current_model)[-5:] %}
                <li>
                    <a href="{{model | model_file}}">
                        {{ model | model_name }}
                    </a>
                </li>
            {% endfor %}
            </ul>

            <h2>Model Consistency</h2>

            <table>
                {% for i in range(GRID_SIZE) %}
                    <tr>
                        {% for j in range(GRID_SIZE) %}
                        <td style="--data-value: {{ consistency[(i, j)] }}">{{ "%.2f"|format(consistency[(i, j)]) }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </table>

            <!--
            <p>Prompt</p>
            <div class="markdown-body prompt">{{ prompt | to_markdown |safe }}</div>
            -->

            <div class="tabs">
                {% for item in items %}
                <input type="radio" name="tabs" id="tab-{{loop.index}}" checked />
                <label for="tab-{{loop.index}}">Response {{ loop.index }} ({{item.score}})</label>

                <div class="tab">
                    <p>Score: {{ item.score }}</p>

                    <!-- <p id="response-{{loop.index}}">Response {{ loop.index }}.</p> -->
                    <div class="markdown-body response">{{ item.content | to_markdown | safe }}</div>

                    {% if item.evaluation %}
                        <p>GPT-4-Turbo says:</p>
                        <div class="markdown-body evaluation">
                            {{ item.evaluation | to_markdown | safe }}
                        </div>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </main>
    </body>
</html>
